{
  "name": "@bustle/graphql-loader",
  "version": "1.0.2",
  "description": "GraphQL Loader for Webpack",
  "license": "MIT",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/bustle/graphql-loader",
  "repository": "bustle/graphql-loader",
  "keywords": [
    "webpack",
    "loader",
    "graphql"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "format": "prettier '**/*.{js,ts,json,md}' --ignore-path .gitignore --write",
    "prepublishOnly": "npm test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/memory-fs": "^0.3.3",
    "graphql": "^15.6.0",
    "jest": "^27.2.3",
    "memory-fs": "^0.5.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "webpack": "^5.55.0"
  },
  "peerDependencies": {
    "graphql": "^15.0.0",
    "webpack": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/?(*.)(spec).ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/preprocessor.js"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
